
@{
    ViewBag.Title = "Đăng Kí Làm Gia Sư - Trung tâm Toàn Thắng";
    Layout = "~/Views/Shared/_ToanThangLayout.cshtml";
}

<div class="container">
    <div class="page-title clearfix">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">Đăng kí làm gia sư</h3>
            </div>
        </div>
    </div>
</div>
<div class="container form-horizontal">
    <div class="row">
        <h4 class="text-danger">@ViewBag.ThongBao</h4>
        <div class="col-md-12">
            <div class="widget-item">
                @using (Html.BeginForm("DangKiLamGiaSu", "DanngKiTimGiaSu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                   

                    <div class="form-group">
                        @Html.Label("Họ và tên:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="FullName" required placeholder="Nhập họ tên đầy đủ..." aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Email:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="Email" required placeholder="Nhập email..." aria-describedby="basic-addon1" >
                            @*<h4 class="col-lg-9" name="Email" value="">@ViewData["Email"]</h4>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Năm sinh:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <input type="number" class="form-control" name="YearOfBirth" placeholder="Nhập năm sinh..." aria-describedby="basic-addon1" required>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Giới tính:", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">

                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-default **active**">
                                    <input type="radio" id="g1" name="Gender" value="1" checked="checked" /> Nam
                                </label>
                                <label class="btn btn-default">
                                    <input type="radio" id="g2" name="Gender" value="0" /> Nữ
                                </label>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Số điện thoại:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PhoneNumber" placeholder="Nhập số điện thoại..." aria-describedby="basic-addon1" required>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Phạm vi dạy:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="TeachArea" placeholder="Cấp dạy của giáo viên" required aria-describedby="basic-addon1" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Mức phí:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8 input-group">
                            <input type="number" class="form-control" name="Tuition" placeholder="Mức phí cho giáo viên" required aria-describedby="basic-addon1" />
                            <span class="input-group-addon" id="basic-addon2">VND</span>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Nội dung dạy:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <textarea cols="100%" rows="5" required class="form-control" name="TeachContent" placeholder="Nhập nội dung dạy..." aria-describedby="basic-addon1"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Nội dung chi tiết:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            <textarea cols="100%" rows="5" required class="form-control" name="MoreContent" placeholder="Mô tả cụ thể hơn...." aria-describedby="basic-addon1"></textarea>
                        </div>
                    </div>

                    @*<div class="form-group">
                            @Html.Label("Mô tả chi tiết:", new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                <textarea cols="100%" rows="5" class="form-control" name="Detail" placeholder="Nhập thông tin mô tả chi tiết hơn...." aria-describedby="basic-addon1"></textarea>
                            </div>
                        </div>*@
                    @*<div class="form-group">
                            @Html.Label("Ảnh đại diện:", new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                <input type="file" name="fileUpload" class="btn btn-default form-control" />
                                @ViewBag.ThongBao
                            </div>
                        </div>*@



                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-8">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
</div>