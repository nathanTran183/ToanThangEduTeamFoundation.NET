@model ToanThangEdu.Models.RegisterTeacher

@{
    ViewBag.Title = "XÁC NHẬN XÓA";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container form-horizontal">
    <div class="row">

        <div class="widget-item">
            
                @using (Html.BeginForm("Delete", "RegisterTeachers", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                 {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", Model.Id)
                    <div class="col-lg-10">
                        <h4 class="prof-name-list text-center">BẠN CÓ MUỐN XÓA GIA SƯ NÀY?</h4>
                        <hr />
                        <div class="col-lg-2"></div>
                            <div class="col-lg-7">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayName("Tên giáo viên:")
                                    </dt>

                                    <dd>
                                        @Model.Fullname
                                    </dd>
                                    <dt>
                                        @Html.DisplayName("Email:")
                                    </dt>

                                    <dd>
                                        @Model.Email
                                    </dd>
                                    <dt>
                                        @Html.DisplayName("Số điện thoại:")
                                    </dt>

                                    <dd>
                                        @Model.PhoneNumber
                                    </dd>
                                    <dt>
                                        @Html.DisplayName("Giới tính:")
                                    </dt>

                                    <dd>
                                        @Model.Gender
                                    </dd>

                                    <dt>
                                        @Html.DisplayName("Phạm vi dạy:")
                                    </dt>

                                    <dd>
                                        @Model.TeachArea
                                    </dd>
                                    <dt>
                                        @Html.DisplayName("Phí dạy:")
                                    </dt>

                                    <dd>
                                        @Model.Tuition
                                    </dd>

                                    <dt>
                                        @Html.DisplayName("Nội dung dạy:")
                                    </dt>

                                    <dd>
                                        @Html.Raw(Model.TeachContent)
                                    </dd>

                                    <dt>
                                        @Html.DisplayName("Mô tả chi tiết:")
                                    </dt>

                                    <dd>
                                        @Html.Raw(Model.MoreContent)
                                    </dd>

                                </dl>
                                <div class="form-group">
                                    <div class="col-md-offset-3 col-lg-9">
                                        <input type="submit" value="Xóa" class="btn btn-danger" />
                                        @Html.ActionLink("Quay lại", "Index", "RegisterTeachers", null, new { @class = "btn btn-primary" })
                                    </div>
                                </div>

                            </div>
                        </div>

                }
            </div>

    </div>

</div>


