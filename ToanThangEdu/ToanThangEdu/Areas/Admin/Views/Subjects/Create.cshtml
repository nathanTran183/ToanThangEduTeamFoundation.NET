@model ToanThangEdu.Models.Subject

@{
    ViewBag.Title = "TẠO MỚI";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container form-horizontal">
    <div class="row">

        <div class="col-lg-10">
            <div class="widget-item">
                <h4 class="prof-name-list text-center">TẠO LỚP MÔN HỌC</h4>

                @using (Html.BeginForm("Create", "Subjects", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Tên môn học:", new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="Subject1" placeholder="Nhập tên môn học ..." required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-lg-9">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>