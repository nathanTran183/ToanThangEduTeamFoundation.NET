@model IEnumerable<ToanThangEdu.Models.DocumentsCategory>
@using ToanThangEdu.Areas.Admin.Controllers
@{
    ViewBag.Title = "QUẢN LÝ THỂ LOẠI CHIA SẺ TÀI LIỆU";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container form-horizontal">
    <div class="row">
        <div class="col-lg-10">
            <div class="widget-item">
                <div class="form-horizontal">
                    <h4 class="text-center">THỂ LOẠI TÀI LIỆU</h4>
                    <hr />
                    <p>
                        @Html.ActionLink("Thêm loại mới", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayName("Thể loại gốc")
                            </th>
                            <th>
                                @Html.DisplayName("Tên")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in (List<Menu>)ViewBag.Menu)
                        {
                            <tr>
                                <td>
                                    @item.PaMenu
                                </td>
                                <td>
                                    @item.ChiMenu
                                </td>
                                <td>
                                    <a class='btn btn-warning btn-sm' href="@Url.Action("Edit", "DocumentsCategories", new { id = item.Id })" role='button'><span title="Chỉnh sửa" class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                                    <a class='btn btn-danger btn-sm' href="@Url.Action("Delete", "DocumentsCategories", new {id = item.Id })" role='button'><span title="Xóa" class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

