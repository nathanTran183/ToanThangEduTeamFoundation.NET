@model ToanThangEdu.Models.DocumentsCategory
@using ToanThangEdu.Areas.Admin.Controllers
@{
    ViewBag.Title = "TẠO THỂ LOẠI TÀI LIỆU";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<SelectListItem> listRoot = new List<SelectListItem>();
    foreach (var item in (List<Menu>)ViewBag.RootList)
    {
        listRoot.Add(new SelectListItem
        {
            Text = item.PaMenu,
            Value = item.Id.ToString(),
        });
    }
}


@using (Html.BeginForm("Create", "DocumentsCategories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container form-horizontal">
        <div class="row">
            <div class="col-lg-10">
                <div class="widget-item">


                    <div class="form-horizontal">
                        <h4 class="text-center">TẠO THỂ LOẠI TÀI LIỆU</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Root: ", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-4">
                                @Html.DropDownList("RootId", listRoot, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Tên: ", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="Name" placeholder="" required aria-describedby="basic-addon1">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-lg-9">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

