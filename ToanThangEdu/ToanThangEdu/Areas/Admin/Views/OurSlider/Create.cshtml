
@{
    ViewBag.Title = "UPLOAD ẢNH";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container form-horizontal">
    <div class="row">
        <div class="col-lg-10">
            <div class="widget-item">
                <div class="form-horizontal">
                    <h4 class="text-center">UPLOAD ẢNH</h4>
                    <hr />
                    @using (Html.BeginForm("Create", "OurSlider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.Label("File đính kèm:", new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="file" name="fileUpload" class="btn btn-default form-control" />
                                <h5 style="color: orangered">@ViewBag.ThongBao</h5>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-lg-9">
                                <input type="submit" value="Upload" class="btn btn-primary" />
                                @Html.ActionLink("Quay lại", "Index", "OurSlider", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>