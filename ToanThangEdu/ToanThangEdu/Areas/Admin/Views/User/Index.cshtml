@model PagedList.IPagedList<ToanThangEdu.Models.AspNetUser>
@using PagedList.Mvc;
@{
    ViewBag.Title = "QUẢN LÝ TÀI KHOẢN";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4 class="text-center">QUẢN LÝ TÀI KHOẢN</h4>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên đăng nhập")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.HomeTown)
            </th>*@
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Id != "b985fe8f-5505-4be0-a233-5ee8b78375fd")
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.HomeTown)
                    </td>*@
                <td>
                    <a class='btn btn-warning btn-sm' href="@Url.Action("Edit", "User", new { id = item.Id })" role='button'><span title="Chỉnh sửa" class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                    <a class='btn btn-danger btn-sm' href="@Url.Action("Delete", "User", new { id = item.Id })" role='button'><span title="Xóa" class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>
                    
                </td>
            </tr>
        }
    }
</table>

@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
