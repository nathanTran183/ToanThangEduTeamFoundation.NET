@model ToanThangEdu.Models.Teacher

@{
    ViewBag.Title = "THAY ĐỔI THÔNG TIN";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Teachers", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>
        <br />
        <h4 class="text-center">CHỈNH SỬA THÔNG TIN GIÁO VIÊN</h4>
        <hr />

        <div class="container">
            <div class="col-lg-4">

                <div class="prof-thumb">
                    @if (Model.ImageURL == null)
                    {
                        <img style="width: 300px; height: 300px" src="~/images/Teacher/No_Image_Available.png" alt="Profesor Name" />
                    }
                    else
                    {
                        <img style="width: 300px; height: 300px" src="~/images/Teacher/@Model.ImageURL" alt="Profesor Name" />
                    }

                </div>
            </div>

            <div class="col-lg-8">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Họ và tên:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="Name" value="@Model.Name" required aria-describedby="basic-addon1" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Ảnh đại diện:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            <input type="file" name="fileUpload" value="@Model.ImageURL" class="btn btn-default form-control" />
                            @ViewBag.ThongBao
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Học vị:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="TeacherType" value="@Model.TeacherType" required aria-describedby="basic-addon1" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Mô tả:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            <textarea cols="100%" rows="5" required class="form-control" name="Description" aria-describedby="basic-addon1">@Model.Description</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Chi tiết:", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            <textarea cols="100%" rows="5" required class="form-control" name="Detail" aria-describedby="basic-addon1">@Model.Detail</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-lg-9">
                            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                            @Html.ActionLink("Quay lại", "Index", "Teachers", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>

}