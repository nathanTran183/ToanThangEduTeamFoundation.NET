@model ToanThangEdu.Models.News

@{
    ViewBag.Title = "TIN TỨC";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




@using (Html.BeginForm("Create", "News", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="container form-horizontal">
        <div class="row">

            <div class="col-lg-10">
                <div class="widget-item">


                    <div class="form-horizontal">
                        <h4 class="text-center">TẠO TIN TỨC</h4>
                        <hr />
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label("Thể loại tin", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.CategoryId, null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Title, "Tiêu đề", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Ảnh đại diện:", new { @class = "control-label col-md-2" })
                                <div class="col-lg-8">
                                    <input type="file" name="fileUpload" class="btn btn-default form-control" />
                                    <h5 style="color:red">@ViewBag.ThongBao</h5>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NewsContent, "Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.NewsContent, new { @id = "NewsContent" })
                                    <script>
                                        CKEDITOR.replace('NewsContent');
                                    </script>
                                    @*<textarea cols="100%" rows="8" class="form-control" name="newsContent" id="newsContent"></textarea>*@
                                    @Html.ValidationMessageFor(model => model.NewsContent, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.CreatorName, "Người viết", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CreatorName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CreatorName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



