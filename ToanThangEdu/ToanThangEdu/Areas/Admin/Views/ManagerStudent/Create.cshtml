@model ToanThangEdu.Models.RegisterStudier

@{
    ViewBag.Title = "TẠO ĐĂNG KÍ TÌM GIA SƯ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container form-horizontal">
    <div class="row">

        <div class="col-lg-10">
            <div class="widget-item">
                @using (Html.BeginForm("Create", "ManagerStudent", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center">TẠO ĐĂNG KÍ TÌM GIA SƯ</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Họ và tên:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="FullName" required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Số điện thoại:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="PhoneNumber"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="email" class="form-control" name="Email"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Địa chỉ:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="Address"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Mức phí:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="number" class="form-control" name="Tuition"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Yêu cầu cấp giáo viên:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="TeacherLevel"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Số các buổi học:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="number" class="form-control" name="NumberOfSession"  required aria-describedby="basic-addon1" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Nội dung học:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <textarea cols="100%" rows="5" id="StudyContent" required class="form-control" name="StudyContent" aria-describedby="basic-addon1"></textarea>
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.Label("Chi tiết hơn:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <textarea cols="100%" rows="5" id="MoreContent" required class="form-control" name="MoreContent" aria-describedby="basic-addon1"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-lg-9">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
