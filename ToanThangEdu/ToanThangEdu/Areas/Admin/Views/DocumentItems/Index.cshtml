@model IEnumerable<ToanThangEdu.Models.DocumentItem>

@{
    ViewBag.Title = "QUẢN LÝ CHIA SẺ TÀI LIỆU";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container form-horizontal">
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-item">
                <div class="form-horizontal">
                    <h4 class="text-center">TÀI LIỆU THAM KHẢO</h4>
                    <hr />
                    <p>
                        @Html.ActionLink("Thêm chia sẻ", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayName("Tên tài liệu")
                            </th>
                            <th>
                                @Html.DisplayName("Nội dung sơ lược")
                            </th>
                            <th>
                                @Html.DisplayName("Thể loại")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocumentContent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocumentsCategory.Name)
                                </td>
                                <td>
                                    <a class='btn btn-warning btn-sm' href="@Url.Action("Edit", "DocumentItems", new { id = item.Id })" role='button'><span title="Chỉnh sửa" class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                                    <a class='btn btn-warning btn-sm' href="@Url.Action("DisplayPDF", "DocumentItems", new { id = item.Id })" role='button'><span title="Xem trước" class='glyphicon glyphicon-book' aria-hidden='true'></span></a>
                                    <a class='btn btn-danger btn-sm' href="@Url.Action("Delete", "DocumentItems", new { id = item.Id })" role='button'><span title="Xóa" class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
