@model ToanThangEdu.Models.DocumentItem

@{
    ViewBag.Title = "TẠO TÀI LIỆU THAM KHẢO";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




@using (Html.BeginForm("Create", "DocumentItems", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container form-horizontal">
        <div class="row">
            <div class="col-lg-10">
                <div class="widget-item">
                    <div class="form-horizontal">
                        <h4 class="text-center">TẠO TÀI LIỆU THAM KHẢO</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Chọn thể loại:", "Chọn thể loại:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("File đính kèm:", new { @class = "control-label col-lg-3" })
                            <div class="col-lg-8">
                                <input type="file" name="fileUpload" class="btn btn-default form-control" />
                                <h5 style="color:red">@ViewBag.ThongBao</h5>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Tiêu đề: ", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Nội dung sơ lược:", htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.DocumentContent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DocumentContent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-8">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

